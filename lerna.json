{
  "$schema": "https://json.schemastore.org/lerna.json",
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "pnpm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "registry": "https://registry.npmjs.org/",
      "message": "chore(release): publish [skip ci]",
      "ignoreChanges": [
        "**/stories/**",
        "**/*.md"
      ],
      "allowBranch": [
        "main",
        "master"
      ]
    },
    "version": {
      "conventionalCommits": true
    }
  }
}